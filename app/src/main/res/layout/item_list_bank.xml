<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:weightSum="1">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.44"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_list_bank_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/item_list_search_name_et"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="Nome do Banco"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#888"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#666"
                android:orientation="horizontal">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/container_control"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_list_search_name_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/verde_mais_escuro"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/item_list_bank_name_balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="50,00"
                        android:textColor="@color/verde_mais_claro"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/item_list_search_name_et"
                        android:layout_toEndOf="@+id/item_list_search_name_et" />

                    <ImageView
                        android:id="@+id/item_list_search_photo_et"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <Button
                    android:id="@+id/item_bank_pagar_conta_bt"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/container_control"
                    android:background="@color/verde_mais_claro"
                    android:text="Pagar Conta"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_bank_pagar_conta_bt"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="5dp">

                        <Button
                            android:id="@+id/item_bank_pagar_bt"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/verde_mais_escuro"
                            android:descendantFocusability="blocksDescendants"
                            android:text="Enviar"
                            android:textColor="#fff"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <Button
                            android:id="@+id/item_bank_receber_bt"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/verde_mais_escuro"
                            android:descendantFocusability="blocksDescendants"
                            android:text="Receber"
                            android:textColor="#fff"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <Button
                            android:id="@+id/item_bank_extrato_bt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/verde_mais_escuro"
                            android:descendantFocusability="blocksDescendants"
                            android:text="Extrato"
                            android:textColor="#fff"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
