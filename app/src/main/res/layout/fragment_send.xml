<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitcoin.socialbanks.fragments.SendFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Email:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/send_fragment_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/button"
                android:layout_toStartOf="@+id/button"
                android:background="@drawable/background_rescue_words_edittext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/send_fragment_search_bt"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/aa"
            android:layout_alignLeft="@+id/aa"
            android:layout_alignRight="@+id/aa"
            android:layout_alignStart="@+id/aa"
            android:layout_below="@+id/aa"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_cadastrar"
            android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha"
            android:gravity="center"
            android:padding="10dp"
            android:text="   Buscar"
            android:textColor="#fff"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/send_fragment_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/send_fragment_search_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:divider="@null" />

        <ProgressBar
            android:id="@+id/send_fragment_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />


    </RelativeLayout>
</FrameLayout>
