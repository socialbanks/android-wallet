<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context="com.bitcoin.socialbanks.fragments.BankDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/bank_detail_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_list_search_name_et"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:text="Nome do Banco"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#888"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/container_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/item_list_search_name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="$"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/verde_mais_escuro"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bank_detail_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/item_list_search_name_et"
                android:layout_toRightOf="@+id/item_list_search_name_et"
                android:gravity="left"
                android:text="50,00"
                android:textColor="@color/verde_mais_claro"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bank_detail_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal" />

        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_bank_detail_progressbar"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:id="@+id/bank_detail_transactions_lv"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight=".5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bank_detail_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verde_mais_claro"
                android:padding="10dp"
                android:text="@string/fragment_bank_detail_button_buy"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bank_detail_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/verde_mais_escuro"
                    android:padding="10dp"
                    android:text="SEND"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bank_detail_receiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/verde_mais_escuro"
                    android:padding="10dp"
                    android:text="@string/fragment_bank_detail_button_receiver"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
